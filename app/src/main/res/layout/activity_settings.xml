<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@mipmap/uimg">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_settings"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/CloseS_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:fontFamily="@font/avenir"
                android:textSize="28sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/SaveS_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:fontFamily="@font/avenir"
                android:textSize="28sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="17dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SetUser_Dp"
        android:layout_width="146dp"
        android:layout_height="154dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dpicon" />

    <TextView
        android:id="@+id/UserDp_Change"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/SetUser_Dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/layout"
        android:fontFamily="@font/avenir"
        android:text="Change Profile Image"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/FullName_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserDp_Change"
        android:hint=" Full Name  "
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/PhoneNum_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FullName_Change"
        android:hint=" Phone Number "
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/layout"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/Address_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PhoneNum_Change"
        android:hint=" Address "
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/layout"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/Password_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Address_Change"
        android:hint=" Password "
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/layout"
        android:padding="10dp"
        />
</RelativeLayout>